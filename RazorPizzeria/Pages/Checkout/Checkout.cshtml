@page
@model RazorPizzeria.Pages.Checkout.CheckoutModel
@{
}

<h1>Your Order!</h1>
@{
	var imgPath = "~/images/Pizzas/" + @Model.ImageTitle + ".png";
}
<div class="align-content-center">
	<div class="col-3 mx-auto mb-5">
		<img src=@imgPath class="w-100" asp-append-version ="true" />
		<p>Your custom pizza named @Model.PizzaName order is ready!</p>
		<p>Total price for your order is : Rs. @Model.PizzaPrice/- </p>
		<br />
		<a class="btn btn-primary mt-1 mx-auto" asp-area="" asp-page="ThankYou">Confirm Order!</a>
	</div>
</div>