@page
@model RazorPizzeria.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
	<h1>Create your own Pizza!</h1>
	<form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
		<input type="text" asp-for="Pizza.PizzaName" placeholder="Give your pizza a name..." /><br />
		<input type="checkbox" asp-for="Pizza.TomatoSauce" placeholder="TomatoSauce" />Tomato Sauce<br />
		<input type="checkbox" asp-for="Pizza.Cheese" placeholder="Cheese" />Cheese<br />
		<input type="checkbox" asp-for="Pizza.Onion" placeholder="Onion" />Onion<br />
		<input type="checkbox" asp-for="Pizza.Paneer" placeholder="Paneer" />Paneer<br />
		<input type="checkbox" asp-for="Pizza.Capcicum" placeholder="Capcicum" />Capcicum<br />
		<input type="checkbox" asp-for="Pizza.Corn" placeholder="Corn" />Corn<br />
		<input type="checkbox" asp-for="Pizza.Olives" placeholder="Olives" />Olives<br />
		<input type="checkbox" asp-for="Pizza.Jalapenos" placeholder="Jalapenos" />Jalapenos<br />

		<button class="btn btn-primary mt-1" type="submit">Order your Pizza</button>
	</form>

</div>