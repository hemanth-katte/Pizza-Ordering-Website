@page
@model RazorPizzeria.Pages.PizzaModel
@{
}

<div class="text-center">
	<div class="mainText">
		<h1 class="display-4 text-black text-capitalize">Our Great Selection of Pizzas!</h1>
		<h4>Choose one or try our Pizza builder, then order and done!</h4>
		<h4>You don't need to enter any details we already know everything!</h4>
		<p class="smallText"><i>Only one pizza per order due to increased demand</i></p>

		<div class="container">
			<div class="row">
				<div class="col-12 mb-5 mt-5">
					<div class="w-100 row makeYourOwnDiv">
						<div class="col-4">
							<img src="~/images/Pizzas/Create.png" class="w-100" />
						</div>
						<div class="col-8 align-items-center">
							<div class="align-middle makeYourOwnText">
								<h3 style="text-align:left;">Create your own Pizza</h3>
								<p style="text-align:left;">Build your own pizza with our PizzaBuilder!</p>
								<a class="btn btn-primary" style="float:left" asp-area="" asp-page="Forms/CustomPizza">Try Now!</a>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>

</div>